# Git

unalias gcam 2</dev/null
function gcam() {
    PREFIX=""
    if [[ $(git_current_branch) == *"EEX-"* ]] || [[ $(git_current_branch) == *"DBCG-"* ]] ;
    then
        IFS='/' read -rA BRANCH <<< $(git_current_branch)
        PREFIX="${BRANCH[2]}: "
   fi
   git commit -v -a -m "${PREFIX}$1"

}
